@model IEnumerable<TaikoCordobaFinal.Entities.Evento>

@{
    ViewBag.Title = "ArchivoEventos";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="wrapper">
    <div class="page-wrapper">
        <div class="row">
            <div class="col-md-10">
                <h2>Archivo de Eventos</h2>
                @*<ul class="nav nav-pills">
                    <li>@Html.ActionLink("Eventos próximos", "ProximosEventos", null, new { @class = "a" })</li>
                    <li>@Html.ActionLink("Archivo", "ArchivoEventos", null, new { @class = "a" })</li>
                </ul>*@

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NombreSolicitante)
                        </th>

                        <th>
                            Fecha y hora
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Lugar)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreSolicitante)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Lugar)
                            </td>

                            <td>
                                @Html.ActionLink("Detalle", "DetalleEventos", new { id = item.Id }, new { @class = "btn btn-danger btn-lg btn-fill" }) 
                                @Html.ActionLink("Eliminar", "BorrarEvento", new { id = item.Id }, new { @class = "btn btn-danger btn-lg btn-fill" })
                            </td>

                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>